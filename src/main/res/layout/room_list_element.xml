<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#606060"
    >

    <ImageView
        android:id="@+id/roomlist_elm_img"
        android:layout_margin="5dip"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:scaleType="centerCrop"
        android:src="@drawable/green"/>

    <TableLayout
        android:layout_weight="1"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="5dip"
        android:layout_width="0dip"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/roomlist_elm_headline"
            android:textSize="20sp"
            android:text="A121"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/roomlist_elm_text"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="07/03/2015 14:23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableLayout>

    <ImageView
        android:id="@+id/roomlist_elm_alert"
        android:layout_margin="5dip"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:scaleType="centerCrop"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/white_alert"/>
    <ImageView
        android:id="@+id/roomlist_elm_msg"
        android:layout_margin="5dip"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:scaleType="centerCrop"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/white_msg"/>
</LinearLayout>